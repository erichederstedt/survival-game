{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "hxml",
      "file": "build.hxml",
      "problemMatcher": ["haxe-fake"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "hxml: build.hxml"
    },
    {
      "label": "Start Five Server",
      "type": "shell",
      "command": "npx five-server",
      "isBackground": true,
      "problemMatcher": {
        "owner": "five-server",
        "pattern": {
          "regexp": "^.*> Local:.*(http://.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Five Server running at:.*$",
          "endsPattern": "^.*> Local:.*http.*$"
        }
      }
    }
  ]
}
